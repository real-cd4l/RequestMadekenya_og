<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primaryColor"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:text="New cargo"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <RadioGroup
        android:id="@+id/rgRisiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbRisiti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Una risiti" />

        <RadioButton
            android:id="@+id/rbHaunaRisiti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Mzigo Hauna risiti ya TRA" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:backgroundTint="#ddd"
            android:hint="jina la mzigo"
            android:textColorHint="#4e4c4c"
            app:boxBackgroundColor="#ddd"
            app:boxStrokeColor="#4e4c4c"
            app:endIconTint="#4e4c4c"
            app:hintTextColor="#4e4c4c"
            app:passwordToggleTint="#4e4c4c"
            app:placeholderTextColor="#4e4c4c"
            app:startIconTint="#4e4c4c">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edJinaLaMzigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                android:inputType="textFilter"
                android:textColor="#4e4c4c" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#ddd"
            android:layout_marginEnd="8dp"
            android:hint="idadi"
            android:layout_marginStart="10dp"
            android:textColorHint="#4e4c4c"
            app:boxBackgroundColor="#ddd"
            app:boxStrokeColor="#4e4c4c"
            app:endIconTint="#4e4c4c"
            app:hintTextColor="#4e4c4c"
            app:passwordToggleTint="#4e4c4c"
            app:placeholderTextColor="#4e4c4c"
            app:startIconTint="#4e4c4c">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edIdadi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#4e4c4c" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#ddd"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="unapoenda"
        android:textColorHint="#4e4c4c"
        app:boxBackgroundColor="#ddd"
        app:boxStrokeColor="#4e4c4c"
        app:endIconTint="#4e4c4c"
        app:hintTextColor="#4e4c4c"
        app:passwordToggleTint="#4e4c4c"
        app:placeholderTextColor="#4e4c4c"
        app:startIconTint="#4e4c4c">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edUnapoenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
            android:inputType="textFilter"
            android:textColor="#4e4c4c" />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>